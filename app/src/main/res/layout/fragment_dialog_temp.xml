<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DialogTempFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/namesTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/separateNames"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/lastNamesTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Spinner

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTemp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/txtTemp" />

        <TextView
            android:id="@+id/txtTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/digite_Temperatura"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/_45_5"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/datesTre"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            android:text="@string/enviar" />

    </LinearLayout>

</FrameLayout>